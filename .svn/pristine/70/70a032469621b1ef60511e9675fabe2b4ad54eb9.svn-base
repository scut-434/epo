	/**
	 * 
	 * <pre>
	 * 实时新闻舆情地图
	 * </pre>
	 * @param model
	 * @param request
	 * @param number
	 * @return
	 */
	@RequestMapping(value = "newsMap")
	public @ResponseBody Map<String, Object> newsMap(Model model, HttpServletRequest request,Integer number) {
		Map<String, Object> map = new HashMap<String,Object>();
		List<Map<String,Object>> list = newsListService.findNewsMap(number);
		map.put("data", list);
		return map;
	}
	

